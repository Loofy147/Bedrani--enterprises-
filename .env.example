# Environment variables for EspoCRM Docker Compose setup
#
# IMPORTANT: Replace the placeholder values below with your own secure credentials.
# Do not commit this file to version control if it contains sensitive information.

# -----------------
# Local Development (docker-compose.yml)
# -----------------
# MariaDB settings
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=espocrm
MYSQL_USER=espocrm_user
MYSQL_PASSWORD=your_secure_user_password

# -----------------
# Production (docker-compose.prod.yml)
# -----------------
# PostgreSQL settings
POSTGRES_DB=espocrm
POSTGRES_USER=espocrm_user
POSTGRES_PASSWORD=your_secure_postgres_password

# MinIO settings
MINIO_ROOT_USER=espocrm_minio_user
MINIO_ROOT_PASSWORD=your_secure_minio_password

# -----------------
# Common EspoCRM settings
# -----------------
ESPO_ADMIN_USERNAME=admin
ESPO_ADMIN_PASSWORD=your_secure_admin_password
# For local development, use http://localhost:8080
# For production, use your actual domain, e.g., https://crm.your-domain.com
ESPO_SITE_URL=http://localhost:8080

# -----------------
# Production Domain & SSL
# -----------------
# The domain for your EspoCRM instance (e.g., crm.your-domain.com)
DOMAIN=crm.your-domain.com
# The email for Let's Encrypt SSL certificate registration
EMAIL=your-email@example.com
# Set to 1 to use the Let's Encrypt staging server for testing, 0 for production
STAGING=1
